PORT=8006
NODE_ENV=development

# Postgres (CRITICAL: Use SSL in production with ?sslmode=require)
DATABASE_URL=postgresql://proveniq:proveniq_dev@localhost:5434/proveniq_ledger

# Auth (CRITICAL: Must be 64+ characters in production)
ADMIN_API_KEY=dev_admin_key_at_least_32_characters_long_replace_in_production
FIREBASE_PROJECT_ID=your-firebase-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/firebase-service-account.json

# Ledger Network ID (CRITICAL: Must NOT contain "dev" or "test" in production)
LEDGER_NETWORK_ID=proveniq-dev

# Logging (CRITICAL: Use "json" in production for structured logging)
LOG_FORMAT=text

# CORS (Optional - comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000
